<% layout("/layouts/boilerplate")  %>
<body>
    
    <div class="row mt-3">
        <div class="col-8 offset-3">

            <h3><%= listing.title  %></h3>
        </div>

        <div class="col-6 offset-3 card show-card listing-card">

            <img src="<%= listing.image.url %>" alt="listing_image" class="card-img-top show-img">

            <div class="card-body">
                <p>
                    <b><%= listing.title  %> </b> <br>
                    <%= listing.description  %> <br>
                    &#8377;<%= listing.price.toLocaleString("en-IN")  %> <br>
                    <%= listing.location  %> <br>
                    <%= listing.country  %> <br>
                </p>
            </div>
        </div>

        <div class="col-6 btns offset-3">

            <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark edit-btn">Edit</a>

            <form method="post" action="/listings/<%= listing._id %>?_method=DELETE">
                <button class="btn btn-dark">Delete</button>
            </form>
        </div>

        
        <div class="col-8 offset-3 mb-3">
            <hr>
            <h4>Leave a Review</h4>

            <form  action="/listings/<%= listing.id %>/reviews" method="post" novalidate class="needs-validation">

                <div class="mb-3 mt-3">
                    <label for="rating" class="form-label">Rating</label>
                    <input type="range" name="review[rating]" id="rating" min="1" max="5" class="form-range">
                </div>

                <div class="mb-3 mt-3">
                    <label for="comment" class="form-label">Comment</label>
                    <textarea 
                        name="review[comment]" 
                        id="comment" 
                        cols="30" rows="5" 
                        class="form-control" 
                        required
                    ></textarea>
                    
                    <div class="invalid-feedback">Please add some comments for review</div>
                </div>

                <button class="btn btn-outline-dark">Submit</button>

            </form>

            <hr>

            <p><b>All Reviews</b></p>

            <div class="row">

                <% for(review of listing.reviews) { %> 

                    <div class="card col-5 ms-3 mb-3">
                        <div class="card-body">
                            
                            <h5 class="card-title">Jane Doe</h5>
                            <p class="card-text"><%= review.comment %></p>
                            <p class="card-text"><%= review.rating %> Stars</p>
    
                        </div>

                        <form class="mb-3" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="post">
                            <button class="btn btn-sm btn-dark">Delete Review</button>
                        </form>
                    </div>
                <% } %>

            </div>
            
            
        </div>
        
    </div>
</body>
